# Suppress specific deprecation warnings that we can't fix immediately
# These are from deeply nested dependencies that we don't control
loglevel=warn
ignore-deprecation=node-domexception
ignore-deprecation=@esbuild-kit/esm-loader
ignore-deprecation=@esbuild-kit/core-utils

# Skip optional dependencies that might cause platform issues
optional=false
omit=optional

# Additional configurations for deployment
fund=false
audit=false
